test broker-2.0.0 {will message v4} -setup {
    client create sub1 4 will/#
} -body {
    client create sub2 4 # --will-topic will/direct --will-payload gone
    sub2 kill KILL
    sub1 collect
} -cleanup {
    sub1 destroy
} -result {will/direct gone}

